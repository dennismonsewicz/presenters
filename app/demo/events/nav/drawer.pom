Voom::Presenters.define(:events_drawer) do
  helpers Voom::Presenters::Helpers::Inflector
  drawer 'Events' do
    menu do
      %i(field_level_events form_level_events tagged_input).sort.each do |comp|
        item titleize(comp) do
          event :click do
            loads comp
          end
        end
      end
      %i(dialog replaces loads toggle_visibility snackbar updates deletes posts clear last_response).sort.each do |comp|
        item titleize(comp) do
          event :click do
            loads "#{comp}_action"
          end
        end
      end
    end
  end
end
