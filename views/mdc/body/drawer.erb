<div class="mdl-layout__drawer">
  <span class="mdl-layout__title mdc-typography--title"><%= expand_text(drawer.title.text) %></span>
  <% if drawer.menu&.items %>
    <nav class="mdl-navigation">
      <% drawer.menu&.items&.each do |item| %>
        <a class="mdl-navigation__link <%= 'v-menu-item__selected' if item.selected %>"
           id="<%= item.id %>"
           style="text-decoration: none;"
           href="javascript:void(0)"
           <%= erb :"components/event", :locals => {comp: item, events: item.events, parent_id: item.event_parent_id} %>>
          <%= erb :"components/icon", :locals => {comp: item.icon} %>
          <%= item.text %>
        </a>
      <% end %>
    </nav>
  <% end %>
  <%= erb :"components/render", :locals => {:components => drawer.components, :scope => nil} %>
</div>
